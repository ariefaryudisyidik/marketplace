<resources>
    <!-- Base application theme. -->
    <style name="Theme.Entreumart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Text -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Normal">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button -->
    <style name="Button">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- SearchView -->
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/hint_search</item>
    </style>

    <!-- Corner -->
    <style name="cornerCircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">56dp</item>
    </style>

    <style name="cornerRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- ProgressBar -->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Circle Button -->
    <style name="CircleButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_circle_outline</item>
    </style>
</resources>