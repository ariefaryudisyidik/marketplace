<resources>
    <!-- Base application theme. -->
    <style name="Theme.Marketplace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Text -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Normal">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/montserrat_semibold</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Button -->
    <style name="Button">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>